@model IEnumerable<WebApplication4.Models.BidModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<h2>Property List</h2>
<div class="row">
    <div class="col s6 offset-s3">
        <a class="waves-effect waves-light btn" href="@Url.Action("AddProperty", "HomePage")"><i class="material-icons left">add</i>Add Property</a>

        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BidDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bid_Amount)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BidDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bid_Amount)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
