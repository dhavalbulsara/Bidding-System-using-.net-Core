@model WebApplication4.Models.MessageModel

@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>NewMessage</h2>
<div class="row">
    @using (Html.BeginForm("NewMessage", "Message", FormMethod.Post,
new { @class = "col s6 offset-s3" }))
    {
        @Html.ValidationSummary(true)


        <div class="row">
            <div class="input-field col s12">
                @Html.DropDownListFor(Model => Model.ToUserID, (IEnumerable<SelectListItem>)ViewBag.Users)
                @Html.LabelFor(Model => Model.ToUserID)
            </div>
            <div class="input-field col s12">
                @Html.LabelFor(Model => Model.Body)
                @Html.TextAreaFor(Model => Model.Body, new { @class = "validate materialize-textarea"})
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "validate" })
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Submit
            <i class="material-icons right">send</i>
        </button>
    }

</div>

